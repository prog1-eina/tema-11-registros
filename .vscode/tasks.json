{
    "tasks": [
        {
            "label": "Terminal (solo macOS, para dar permisos a VSC)",
            "type": "shell",
            "command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo hello\"\nend tell'",
            "problemMatcher": []
        },
        {
            "label": "Compilar programa «personas»",
            "type": "shell",
            "command": "make",
            "args": [
                "personas"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Ejecutar programa «personas»",
            "type": "shell",
            "command": "./personas",
            "windows": {
                "command": "cmd",
                "args": ["/c", "chcp 65001 && .\\personas.exe"]
            },
            "dependsOn": "Compilar programa «personas»",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Compilar programa «nifs»",
            "type": "shell",
            "command": "make",
            "args": [
                "nifs"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Ejecutar programa «nifs»",
            "type": "shell",
            "command": "./nifs",
            "windows": {
                "command": "cmd",
                "args": ["/c", "chcp 65001 && .\\nifs.exe"]
            },
            "dependsOn": "Compilar programa «nifs»",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "presentation": {
        "showReuseMessage": true,
        "panel": "shared",
        "reveal": "always",
        "focus": true,
    },
    "version": "2.0.0"
}
